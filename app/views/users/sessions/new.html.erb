<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
  <%= render "users/shared/error_messages", resource: resource %>
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign In</h5>
            <form class="form-signin">
              <div class="form-label-group">
                <%= f.label :Email_Address %><br />
                <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
              </div>
              <div class="form-label-group">
                <%= f.label :Password %><br />
                <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
              </div>
              <%= f.submit "Sign in", class: "btn mt-3 btn-lg btn-primary btn-block text-uppercase"  %>
              <hr class="my-4">
            </form>
          </div>
        </div>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
<% end %>
